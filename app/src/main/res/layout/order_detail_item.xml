<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_1sdp"
        android:layout_marginEnd="@dimen/_1sdp"
        android:background="@color/color_F0F4F6"
        android:paddingBottom="@dimen/_3sdp">

        <LinearLayout
            android:id="@+id/orderDetailLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:minHeight="@dimen/_18sdp"
            android:paddingStart="@dimen/_5sdp"
            android:paddingEnd="@dimen/_3sdp"
            android:background="@drawable/order_list_item_background">

            <LinearLayout
                android:id="@+id/orderIdLinearLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="@dimen/_32sdp"
                android:layout_gravity="center"
                android:gravity="start"
                android:paddingStart="@dimen/_1sdp">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/orderIdDotBackgroundImageView"
                    android:layout_width="@dimen/_3sdp"
                    android:layout_height="@dimen/_3sdp"
                    android:layout_gravity="center"
                    android:background="@drawable/order_status_bg" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/orderIdTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/_2sdp"
                    android:fontFamily="@font/gotham_book"
                    android:text="@string/_44565"
                    android:textColor="@color/grey"
                    android:textSize="@dimen/_5ssp" />
            </LinearLayout>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/customerNameTextView"
                android:minWidth="@dimen/_47sdp"
                android:layout_width="@dimen/_47sdp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                tools:text="@string/_text"
                android:paddingStart="@dimen/one_dp"
                android:maxLines="2"
                android:paddingEnd="@dimen/_5sdp"
                android:textColor="@color/black"
                android:textSize="@dimen/_5ssp"
                app:fontFamily="@font/gotham_book" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/orderTotalAppCompatTextView"
                android:layout_width="wrap_content"
                android:minWidth="@dimen/_32sdp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/century_schoolbook_bold"
                android:includeFontPadding="false"
                android:textColor="@color/green_light"
                android:textSize="@dimen/_5ssp"
                tools:text="$220" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/orderTypeTextView"
                android:minWidth="@dimen/_42sdp"
                android:maxWidth="@dimen/_42sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/gotham_book"
                android:includeFontPadding="false"
                android:textColor="@color/grey"
                android:textSize="@dimen/_5ssp"
                tools:text="Pickup" />

            <LinearLayout
                android:id="@+id/orderStatusLinearLayout"
                android:layout_width="wrap_content"
                android:minWidth="@dimen/_39sdp"
                android:maxWidth="@dimen/_39sdp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/statusBackgroundCardView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/light_green"
                    app:cardCornerRadius="@dimen/_2sdp">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/statusTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="@dimen/_2sdp"
                        android:layout_marginEnd="@dimen/_2sdp"
                        android:layout_marginVertical="@dimen/_2sdp"
                        android:fontFamily="@font/gotham_book"
                        android:gravity="center"
                        android:includeFontPadding="false"
                        android:text="@string/_text"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_4ssp"
                        app:textAllCaps="true" />

                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/promisedTimeTextView"
                android:layout_width="wrap_content"
                android:minWidth="@dimen/_66sdp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/minus_two_dp"
                android:fontFamily="@font/gotham_book"
                android:includeFontPadding="false"
                android:text="@string/_text"
                android:textAllCaps="true"
                android:textColor="@color/black"
                android:textSize="@dimen/_5ssp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:minWidth="@dimen/_60sdp"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:paddingStart="@dimen/two_dp"
                tools:ignore="RtlSymmetry">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/orderDateAndTimeTextView"
                    android:layout_width="@dimen/_66sdp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/gotham_book"
                    android:gravity="start"
                    android:includeFontPadding="false"
                    android:textAllCaps="true"
                    android:textColor="@color/grey_999999"
                    android:textSize="@dimen/_5ssp"
                    tools:text="07/17/2022,02:34 PM" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/nextArrowImageView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/ic_next_arrow_icon"
                    android:backgroundTint="@color/next_arrow_color" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</merge>