<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/color_F0F4F6"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".ui.userstore.loyaltycard.LoyaltyRegistrationSuccessDialog">

    <LinearLayout
        android:layout_width="@dimen/_160sdp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/bg_rounded_small_corner_radius_white"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingHorizontal="@dimen/_13sdp"
        android:paddingVertical="@dimen/_10sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_gravity="center"
                android:src="@drawable/scan_trophy_icon" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_10sdp"
                android:fontFamily="@font/century_schoolbook_bold"
                android:includeFontPadding="false"
                android:text="@string/registration_is_successful"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="@dimen/_10ssp" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_5sdp"
                android:fontFamily="@font/gotham_book"
                android:includeFontPadding="false"
                android:paddingStart="@dimen/_5sdp"
                android:paddingEnd="@dimen/_5sdp"
                android:text="@string/thanks_message"
                android:textAlignment="center"
                android:textColor="@color/grey"
                android:textSize="@dimen/_5ssp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/backToCheckoutButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_8sdp"
                android:backgroundTint="@color/button_color"
                android:fontFamily="@font/gotham_medium"
                android:includeFontPadding="false"
                android:letterSpacing="0.01"
                android:paddingHorizontal="@dimen/_8sdp"
                android:paddingVertical="@dimen/_8sdp"
                android:text="@string/back_to_checkout"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="@dimen/_8ssp"
                app:cornerRadius="@dimen/_4sdp" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>