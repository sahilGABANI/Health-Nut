<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:id="@+id/rlOption"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_23sdp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvGreensOption"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:fontFamily="@font/gotham_medium"
            android:gravity="center"
            android:paddingHorizontal="@dimen/_6sdp"
            android:includeFontPadding="true"
            android:text="@string/greens_option"
            android:textAllCaps="true"
            android:textColor="@color/modifier_text_color"
            android:textSize="@dimen/_6ssp" />

        <View
            android:id="@+id/viewGreensOption"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:layout_alignParentStart="true"
            android:layout_alignEnd="@id/tvGreensOption"
            android:layout_alignParentBottom="true"
            android:background="@color/orange"
            android:visibility="visible" />

    </RelativeLayout>

    <View
        android:id="@+id/viewVertical"
        android:layout_width="@dimen/_1sdp"
        android:layout_height="@dimen/_23sdp"
        app:layout_constraintTop_toTopOf="@id/rlOption"
        app:layout_constraintEnd_toEndOf="@id/rlOption"
        android:background="@color/color_D1D1D0" />

</androidx.constraintlayout.widget.ConstraintLayout>