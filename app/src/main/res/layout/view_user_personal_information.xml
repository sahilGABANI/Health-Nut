<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/order_list_background"
    android:orientation="vertical"
    android:paddingStart="@dimen/_5sdp"
    android:paddingEnd="@dimen/_5sdp"
    android:paddingBottom="@dimen/_5sdp">

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5sdp"
        android:fontFamily="@font/gotham_medium"
        android:includeFontPadding="false"
        android:text="@string/personal_information"
        android:textColor="@color/black"
        android:textSize="@dimen/_5ssp"
        app:textAllCaps="true" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/one_dp"
        android:layout_marginTop="@dimen/_3sdp"
        android:background="@color/color_E4E4E3" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/userNameAppCompatTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5sdp"
        android:drawableStart="@drawable/ic_user_small_icon"
        android:drawablePadding="@dimen/_4sdp"
        android:drawableTint="@color/green_light"
        android:fontFamily="@font/gotham_book"
        android:gravity="center_vertical"
        android:includeFontPadding="false"
        android:text="@string/_text"
        android:textColor="@color/black"
        android:textSize="@dimen/_5ssp" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/customerBirthDateCompatTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5sdp"
        android:drawableStart="@drawable/ic_calender"
        android:drawableTint="@color/green_light"
        android:drawablePadding="@dimen/_3sdp"
        android:fontFamily="@font/gotham_book"
        android:includeFontPadding="false"
        android:text="@string/_text"
        android:textColor="@color/black"
        android:textSize="@dimen/_5ssp"
        android:visibility="visible" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/userPhoneNumberAppCompatTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_5sdp"
        android:drawableStart="@drawable/ic_phone_icon"
        android:drawableTint="@color/green_light"
        android:drawablePadding="@dimen/_3sdp"
        android:fontFamily="@font/gotham_book"
        android:includeFontPadding="false"
        android:text="@string/_text"
        android:textColor="@color/black"
        android:textSize="@dimen/_5ssp" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/userEmailAppCompatTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5sdp"
        android:drawableStart="@drawable/ic_mail_icon"
        android:drawableTint="@color/green_light"
        android:drawablePadding="@dimen/_3sdp"
        android:fontFamily="@font/gotham_book"
        android:includeFontPadding="false"
        android:text="@string/_text"
        android:textColor="@color/black"
        android:textSize="@dimen/_5ssp" />

    <RelativeLayout
        android:id="@+id/userDetailsLayout"
        android:layout_width="match_parent"
        android:visibility="gone"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/userDetailsHeaderLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginEnd="@dimen/_2sdp"
                android:orientation="vertical">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:fontFamily="@font/gotham_book"
                    android:text="@string/first_name"
                    android:textColor="@color/grey"
                    android:textSize="@dimen/_5ssp" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/giftPackagingInputLayout"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:minHeight="@dimen/_20sdp"
                    app:boxCornerRadiusBottomEnd="@dimen/_4sdp"
                    app:boxCornerRadiusBottomStart="@dimen/_4sdp"
                    app:boxCornerRadiusTopEnd="@dimen/_4sdp"
                    app:boxCornerRadiusTopStart="@dimen/_4sdp"
                    app:hintEnabled="false">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/nameEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/name"
                        android:imeOptions="actionNext"
                        android:includeFontPadding="false"
                        android:inputType="text"
                        android:textColor="@color/black"
                        android:textColorHint="@color/hintColor"
                        android:textCursorDrawable="@color/hintColor"
                        android:textSize="@dimen/_5ssp" />

                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginStart="@dimen/_2sdp"
                android:orientation="vertical">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:fontFamily="@font/gotham_book"
                    android:text="@string/lastName_optional"
                    android:textColor="@color/grey"
                    android:textSize="@dimen/_5ssp" />

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:hint="@string/surname"
                    android:minHeight="@dimen/_20sdp"
                    app:boxCornerRadiusBottomEnd="@dimen/_4sdp"
                    app:boxCornerRadiusBottomStart="@dimen/_4sdp"
                    app:boxCornerRadiusTopEnd="@dimen/_4sdp"
                    app:boxCornerRadiusTopStart="@dimen/_4sdp"
                    app:hintEnabled="false">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/surNameEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/lastName"
                        android:imeOptions="actionNext"
                        android:includeFontPadding="false"
                        android:inputType="text"
                        android:textColor="@color/black"
                        android:textColorHint="@color/hintColor"
                        android:textCursorDrawable="@color/hintColor"
                        android:textSize="@dimen/_5ssp" />

                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@id/userDetailsHeaderLayout"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginEnd="@dimen/_2sdp"
                android:orientation="vertical">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:layout_gravity="start"
                    android:fontFamily="@font/gotham_book"
                    android:textColor="@color/grey"
                    android:text="@string/phone_optional"
                    android:textSize="@dimen/_5ssp" />

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:hint="@string/phone"
                    android:minHeight="@dimen/_20sdp"
                    app:boxCornerRadiusBottomEnd="@dimen/_4sdp"
                    app:boxCornerRadiusBottomStart="@dimen/_4sdp"
                    app:boxCornerRadiusTopEnd="@dimen/_4sdp"
                    app:boxCornerRadiusTopStart="@dimen/_4sdp"
                    app:hintEnabled="false">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/phoneEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/phone"
                        android:imeOptions="actionNext"
                        android:includeFontPadding="false"
                        android:inputType="phone"
                        android:textColor="@color/black"
                        android:textColorHint="@color/hintColor"
                        android:textCursorDrawable="@color/hintColor"
                        android:textSize="@dimen/_5ssp" />

                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginStart="@dimen/_2sdp"
                android:orientation="vertical">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:layout_gravity="start"
                    android:fontFamily="@font/gotham_book"
                    android:textColor="@color/grey"
                    android:text="@string/email_optional"
                    android:textSize="@dimen/_5ssp" />

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:hint="@string/email_address"
                    android:minHeight="@dimen/_20sdp"
                    app:boxCornerRadiusBottomEnd="@dimen/_4sdp"
                    app:boxCornerRadiusBottomStart="@dimen/_4sdp"
                    app:boxCornerRadiusTopEnd="@dimen/_4sdp"
                    app:boxCornerRadiusTopStart="@dimen/_4sdp"
                    app:hintEnabled="false">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/emailEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/email_cap"
                        android:imeOptions="actionDone"
                        android:includeFontPadding="false"
                        android:inputType="text"
                        android:textColor="@color/black"
                        android:textColorHint="@color/hintColor"
                        android:textCursorDrawable="@color/hintColor"
                        android:textSize="@dimen/_5ssp" />

                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>